<<widget "fameProse">>
	<<switch _args[0]>>
		<<case "scrap">>
			<<set $_output to "战斗">>
		<<case "good">>
			<<set $_output to "善良">>
		<<case "social">>
			<<set $_output to "社交">>
		<<case "model">>
			<<set $_output to "模特">>
		<<case "impreg">>
			<<set $_output to "授孕">>
		<<default>>
			<<set $_output to _args[0].replace("sex","淫乱").replace("prostitution","卖淫").replace("rape","强奸").replace("bestiality","兽交").replace("scrap","战斗").replace("exhibitionism","露出").replace("model","模特").replace("pregnancy","怀孕").replace("impreg","授孕").replace("good","善良").replace("business","商业").replace("social","社交").replace("pimp","皮条")>>
	<</switch>>
	<<print $_output>>
<</widget>>