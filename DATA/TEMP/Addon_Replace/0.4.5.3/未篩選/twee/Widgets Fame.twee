<<widget "famedance">>
	<<exposure>>
	<<if $face isnot "covered" and !$worn.face.type.includes("mask") and !$gloryhole and $statFreeze isnot true>>
		<<if $exposed is 1>>
			<<set $fame.exhibitionism += $audience>>
		<<elseif $exposed gte 2>>
